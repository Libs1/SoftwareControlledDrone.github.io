<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/dark"
    tools:context="com.example.softwarecontrolleddrone.RegisterActivity">

    <EditText
        android:id="@+id/registerUsername"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bright"
        android:hint="@string/hint1"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <EditText
        android:id="@+id/registerPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bright"
        android:hint="@string/hint2"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/registerUsername"
        android:layout_alignStart="@+id/registerUsername" />

    <EditText
        android:id="@+id/registerFirstName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bright"
        android:hint="@string/hint3"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/registerPassword"
        android:layout_alignStart="@+id/registerPassword" />

    <EditText
        android:id="@+id/registerLastName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bright"
        android:hint="@string/hint4"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/registerFirstName"
        android:layout_alignStart="@+id/registerFirstName" />

    <Button
        android:id="@+id/registerButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registerText2"
        android:textColor="@drawable/select_text_button"
        android:background="@drawable/buttonshape"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
</ScrollView>