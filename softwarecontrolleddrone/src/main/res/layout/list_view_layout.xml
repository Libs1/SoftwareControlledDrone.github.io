<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/getFlightDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/getFlightDurationText"
        android:textColor="@color/bright"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/displayFlightDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/displayFlightDurationText"
        android:textColor="@color/white"
        android:layout_below="@+id/getFlightDuration"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/getDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/getDateText"
        android:textColor="@color/bright"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/displayDate" />

    <TextView
        android:id="@+id/displayDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/displayDate"
        android:textColor="@color/white"
        android:layout_marginStart="71dp"
        android:layout_below="@+id/getDate"
        android:layout_toEndOf="@+id/displayFlightDuration" />

</RelativeLayout>